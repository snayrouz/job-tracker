<table class="table table-striped table-bordered text-left">
  <thead><strong> <%= link_to "Jobs by Location", "/jobs?sort=location" %> </strong></thead>
  <tr>
    <th>Location</th>
    <th>Number of Jobs</th>
  </tr>
  <% @location_count.each do |city, count| %>
    <tr>
      <td><%= link_to city, "/jobs/?location=#{city}"%></td>
      <td><%= count %></td>
    </tr>
  <% end %>
</table>


<table class="table table-striped table-bordered text-left">
  <thead><strong><%= link_to "Jobs by Level of Interest", "/jobs?sort=interest" %> </strong></thead>
  <tr>
    <th>Level of Interest</th>
    <th>Number of Jobs</th>
  </tr>
  <% @interest_count.each do |level, count| %>
    <tr class="<%= "level_of_interest_#{level}" %>">
      <td><%= level %></td>
      <td><%= count %></td>
    </tr>
  <% end %>
</table>

<table class="table table-striped table-bordered text-left">
  <thead><strong>Top 3 Companies by Level of Interest</strong></thead>
  <tr>
    <th>Company Name</th>
    <th>Average Level of Interest</th>
  </tr>
  <% @top_companies.each do |data| %>
    <tr>
      <td><%= "#{data[0]}:" %></td>
      <td><%= data[1] %></td>
    </tr>
  <% end %>
</table>
